-- Rayfield Library Yükleme
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Menü Penceresi Oluşturma
local Window = Rayfield:CreateWindow({
   Name = "Leonid Resim Galerisi v1.0",
   LoadingTitle = "Gorseller Yukleniyor...",
   LoadingSubtitle = "by Leonid",
   ConfigurationSaving = {
      Enabled = true,
      FolderName = "LeonidDraw",
      FileName = "Config"
   },
   KeySystem = false
})

-- SENİN ÖZEL RESİM LİSTEN (Buraya her zaman yeni ekleme yapabilirsin)
local ResimListesi = {
    {
        Name = "Psycho Vince", 
        URL = "https://raw.githubusercontent.com/leonid-clown/Draw-me/main/vince.json"
    },
    {
        Name = "Janet", 
        URL = "https://raw.githubusercontent.com/leonid-clown/Draw-me/main/janet.json"
    },
    {
        Name = "Pixel Kedi", 
        URL = "https://raw.githubusercontent.com/leonid-clown/Draw-me/main/kedi.json"
    }
}

-- Ana Sekme
local Tab = Window:CreateTab("Galeri", 4483362458)

-- Listeyi Menüye Otomatik Ekleme
for _, resim in pairs(ResimListesi) do
    local Section = Tab:CreateSection(resim.Name)
    
    Tab:CreateButton({
       Name = "Cizimi Baslat (Draw)",
       Callback = function()
          Rayfield:Notify({
             Title = "Cizim Basladi!",
             Content = resim.Name .. " su an ciziliyor. Lutfen bekleyin.",
             Duration = 5,
             Image = 4483362458,
          })

          -- Veriyi GitHub'dan Çekme
          local success, response = pcall(function() 
             return game:HttpGet(resim.URL) 
          end)

          if success then
             local data = game:GetService("HttpService"):JSONDecode(response)
             
             -- Oyunun çizim sistemini bulma (Farklı oyunlar için alternatifler)
             local drawEvent = game:GetService("ReplicatedStorage"):FindFirstChild("Draw") 
                               or game:GetService("ReplicatedStorage"):FindFirstChild("DrawEvent")
                               or game:GetService("ReplicatedStorage"):FindFirstChild("Paint")

             if not drawEvent then
                Rayfield:Notify({Title = "Hata", Content = "Oyunun cizim sistemi bulunamadi!", Duration = 5})
                return
             end

             -- Çizim Döngüsü
             for i, p in pairs(data) do
                -- Renkleri RGB formatında gönderir
                local color = Color3.fromRGB(p.r, p.g, p.b)
                drawEvent:FireServer(Vector2.new(p.x, p.y), color)
                
                -- Her 10 pikselde bir çok kısa bekleme (Anticheat'e takılmamak için)
                if i % 10 == 0 then
                   task.wait(0.01)
                end
             end
             
             Rayfield:Notify({Title = "Bitti!", Content = resim.Name .. " tamamlandi.", Duration = 3})
          else
             Rayfield:Notify({Title = "Hata", Content = "GitHub'dan veri cekilemedi!", Duration = 5})
          end
       end,
    })
end

-- Menüyü Kapatma Tuşu Bildirimi
Rayfield:Notify({
   Title = "Hazir!",
   Content = "Sag Control tusu ile menuyu gizleyebilirsin.",
   Duration = 5
})

