local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()

local Window = OrionLib:MakeWindow({
    Name = "Leonid Art Gallery", 
    HidePremium = false, 
    SaveConfig = false, 
    ConfigFolder = "LeonidGallery",
    IntroEnabled = true,
    IntroText = "Loading Gallery..."
})

local GalleryTab = Window:MakeTab({
    Name = "Images",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

-- VERİ VE ID EŞLEŞTİRME LİSTESİ
local Images = {
    {
        Name = "GigaChad",
        ID = "100767434959682",
        Link = "https://rentry.co/gigachad_data/raw" -- Çalışıyor
    },
    {
        Name = "Psycho Vince",
        ID = "103478372698783",
        Link = "https://rentry.co/vince_data/raw" -- Çalışıyor
    },
    {
        Name = "Janet",
        ID = "78213107256210",
        Link = "https://rentry.co/janet_data/raw" -- Çalışıyor
    },
    {
        Name = "Custom Art 1 (Pinterest)",
        ID = "86054612464800",
        Link = "https://rentry.co/gigachad_data/raw" -- Test için geçici veri
    },
    {
        Name = "Custom Art 2 (Encrypted)",
        ID = "115307876136806",
        Link = "https://rentry.co/gigachad_data/raw" -- Test için geçici veri
    },
    {
        Name = "Custom Art 3 (Small)",
        ID = "76695795643588",
        Link = "https://rentry.co/gigachad_data/raw" -- Test için geçici veri
    }
}

-- OTOMATİK BUTON OLUŞTURUCU
for _, img in pairs(Images) do
    GalleryTab:AddLabel("Preview ID: " .. img.ID)
    
    GalleryTab:AddButton({
        Name = "Draw: " .. img.Name,
        Callback = function()
            OrionLib:MakeNotification({
                Name = "Downloading...",
                Content = "Fetching data for " .. img.Name,
                Image = "rbxassetid://" .. img.ID,
                Time = 3
            })

            local success, response = pcall(function() return game:HttpGet(img.Link) end)
            
            if success then
                local data = game:GetService("HttpService"):JSONDecode(response)
                local drawEvent = game:GetService("ReplicatedStorage"):FindFirstChild("Draw") or game:GetService("ReplicatedStorage"):FindFirstChild("DrawEvent") or game:GetService("ReplicatedStorage"):FindFirstChild("Paint")

                if drawEvent then
                    OrionLib:MakeNotification({
                        Name = "Drawing Started",
                        Content = "Please wait while drawing...",
                        Time = 3
                    })
                    
                    for i, p in pairs(data) do
                        drawEvent:FireServer(Vector2.new(p.x, p.y), Color3.fromRGB(p.r, p.g, p.b))
                        -- Hız ayarı (Düşürürsen hızlanır, artırırsan güvenli olur)
                        if i % 50 == 0 then task.wait(0.01) end
                    end
                    
                    OrionLib:MakeNotification({Name = "Success", Content = "Drawing Finished!", Time = 3})
                else
                    OrionLib:MakeNotification({Name = "Error", Content = "RemoteEvent not found!", Time = 5})
                end
            else
                OrionLib:MakeNotification({Name = "Error", Content = "Failed to load JSON data!", Time = 5})
            end
        end
    })
end

OrionLib:Init()

